func 获取仓库更新(仓库列表) {

读入数 = 2000
行号 = 0
所有仓库 = []
try 仓库数据=open(仓库列表) {
  for 行 in csv.reader(仓库数据, delimiter=',') {
    行号 += 1
    continue if 行号==1
    break if 读入数 == 0
    仓库 = {'介绍': 行[0], '网址': 行[1].strip(), 'feed': 行[2].strip()}
    所有仓库.append(仓库)
    读入数 -= 1
  }
}

总博客数 = 0
所有博文 = []

for 仓库 in 所有仓库 {
  介绍 = 仓库['介绍'].replace('/', '_')
  网址 = 仓库['网址']
  feed = 仓库['feed']
  子目录 = "feed/`介绍`"

  已下载 = os.path.exists(子目录) and os.path.isdir(子目录)
  os.mkdir(子目录) if !已下载

  更新内容 = 下载文件(feed, 子目录)
  if 更新内容 {
    总博客数 += 1
    所有博文 += 更新内容
  }
}

