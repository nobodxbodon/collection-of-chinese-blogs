func 取新博文(当前内容, 之前内容) {
  新博文 = []
  当前博文 = feedparser.parse(当前内容).entries
  之前博文题目 = list(map(博文 -> 博文.title, feedparser.parse(之前内容).entries))
  for 博文 in 当前博文 {
    if !之前博文题目.__contains__(博文.title) {
      简介 = {'题目': 博文.title, '链接': 博文.link}
      新博文.append(简介)
      println('新添:`简介`')
    }
  }
  return 新博文
}

